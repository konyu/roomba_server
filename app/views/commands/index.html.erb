<p id="notice"><%= notice %></p>

<section>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 panel panel-default">
      <div class="img_area panel-body">
        <%= image_tag("/images/notfound.jpg")%>
      </div>
      <%= form_for(@command, url: commands_send_command_path, remote: true) do |f| %>
      <%= f.hidden_field(:command) %>
      <%#= f.submit("foward", name: nil, disabled: true) %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 panel panel-default">
      <div class="img_area panel-body">
        <button id="foward" class="btn btn-lg btn-primary">foward</button>
        <button id="back" class="btn btn-lg btn-success">back</button>
        <button id="left" class="btn btn-lg btn-warning">left</button>
        <button id="right" class="btn btn-lg btn-danger">right</button>
      </div>
    </div>
  </div>
</section>

<table>
  <thead>
    <tr>
      <th>Command</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commands.each do |command| %>
      <tr>
        <td><%= command.id %></td>
        <td><%= command.command %></td>
        <td><%= link_to 'Show', command %></td>
        <td><%= link_to 'Edit', edit_command_path(command) %></td>
        <td><%= link_to 'Destroy', command, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

